<%= provide(:title, 'Sign up') %> 
<center>
  <div class="page-header">
    <h1>Sign Up For Access</h1>
  </div>
  <div class="row-fluid">
    <%= form_for(@user) do |f| %> 

      <%= f.label :name %>
      <%= f.text_field :name %> 

      <%= f.label :email %>
      <%= f.text_field :email %> 

      <%= f.label :title %>
      <%= f.text_field :title %> 

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %><br/><br/>

      <%= f.submit "Create my account", class: "btn btn-large btn-primary" %> 
    <% end %>
  </div>
  <center><p class="well"><i>Please note: For purposes of patient confidentiality, after signup you will not be able to access patient or conference listings until your account is cleared.</i></p></center>
</center>