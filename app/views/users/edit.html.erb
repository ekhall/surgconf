<% provide(:title, "Edit user") %> 

<center>
  <div class="page-header">
    <h1>Update Your Profile</h1>
  </div>
  <div class="row-fluid">
    <%= gravatar_for @user %><br/>
          <a href="http://gravatar.com/emails">Change</a><br/><br/>
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: @user %>

      <%= f.label :name %>
      <%= f.text_field :name, class: "span3" %> 

      <%= f.label :email %>
      <%= f.text_field :email, class: "span3" %> 

      <%= f.label :title %>
      <%= f.text_field :title, class: "span3" %>

      <%= f.label :password %>
      <%= f.password_field :password, class: "span3" %>

      <%= f.label :password_confirmation, "Confirm Password" %>
      <%= f.password_field :password_confirmation, class: "span3" %><br/><br/>

      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</center>
