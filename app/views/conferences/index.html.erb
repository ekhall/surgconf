<%= provide(:title, 'Available Conferences') %> 
<div class="page-header center">
  <h1>Available Conferences</h1>
</div>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Conference Date</th>
      <th>Number of Patients</th>
      <th>Patients</th>
    </tr>
  </thead>
  <tbody>
    <% @conferences.each do |conf| %>
      <tr>
        <td><%= link_to pretty_date_with_year(conf.conf_date), conf %></td>
        <td>
          <% count = conf.patients.count %>
          <% if count > 3 %>
            <span class="badge badge-important">
              <%= conf.patients.count %>
            </span>
          <% elsif count == 3 %>
            <span class="badge badge-warning">
              <%= conf.patients.count %>
            </span>
          <% elsif count == 2 %>
            <span class="badge badge-success">
              <%= conf.patients.count %>
            </span>
          <% elsif count == 1 %>
            <span class="badge badge-info">
              <%= conf.patients.count %>
            </span>
          <% else %>
            <span class="badge">
              <%= conf.patients.count %>
            </span>
          <% end %>
        </td>
        <td>
          <ul>
            <% conf.patients.each do |pat| %>
              <li><%= "#{pat.surname}" %></li>
            <% end %>
        </ul>
        </td>
      </tr>
    <% end %> 
  </tbody>
</table>
</ul>