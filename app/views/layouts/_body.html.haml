-if full_title(yield(:title)).include? 'Home'
  .well.hero-unit.span6
    = yield
-elsif full_title(yield(:title)).include? "Patient"
  .well.span12
    -flash.each do |key, value|
      .alert{class: "alert-#{key}"} 
        =value
    = yield
-else
  .hero-unit.span12
    -flash.each do |key, value|
      .alert{class: "alert-#{key}"} 
        =value
    = yield