!!!
%html
  %head
    %title= full_title(yield(:title))
    = stylesheet_link_tag    "application", media: "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    %link(rel='stylesheet'
          href='http://fonts.googleapis.com/css?family=Open+Sans'
          type='text/css')
    = render 'layouts/shim'
  %body
    = render 'layouts/header'
    .hero-unit.span8
      = yield
    = render 'layouts/footer'
